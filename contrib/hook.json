{
    "version": "1.0.0",
    "hook": {
        "path": "/usr/bin/bash",
        "args": ["bash", "-c", "chroot /proc/$(cat pidfile)/root update-crypto-policies --set DEFAULT:SHA1"]
    },
    "when": {
        "annotations": {
          "^kubevirt\\.io/domain$": ".*"
        },
        "commands": [
            ".*virt-launcher-monitor.*",
            ".*bash.*"
        ]
    },
    "stages": ["createContainer"]
}
