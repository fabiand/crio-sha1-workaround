{
    "version": "1.0.0",
    "hook": {
        "path": "/usr/bin/bash",
        "args": ["bash", "-c", "update-crypto-policies --set DEFAULT:SHA1 ; touch /etc/.sha1_try_enable"]
    },
    "when": {
        "annotations":  {
            "^sha1\\.kubevirt\\.io/enabled$": "^true$"
        }
    },
    "stages": ["startContainer"]
}
