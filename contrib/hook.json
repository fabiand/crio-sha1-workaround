{
    "version": "1.0.0",
    "hook": {
        "path": "/usr/bin/bash",
        "args": ["bash", "-c", "which update-crypto-policies && update-crypto-policies --set DEFAULT:SHA1 || :"]
    },
    "when": {
        "always": true
    },
    "process": {
        "user": {
            "uid": 0,
            "gid": 0
        }
    },
    "stages": [
        "startContainer"
    ]
}

