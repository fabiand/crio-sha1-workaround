{
    "version": "1.0.0",
    "hook": {
        "path": "/usr/bin/bash",
        "args": ["bash", "-c", "update-crypto-policies --set DEFAULT:SHA1 ; touch /.sha1_try_enable"]
    },
    "when": {
        "annotations":  {
            "^kubevirt\\.io/domain$": ".*",
            "^io\\.kubernetes\\.pod\\.name$": "^virt-launcher-",
            "^io\\.kubernetes\\.container\\.name$": "^compute$"
        }
    },
    "stages": ["startContainer"]
}
